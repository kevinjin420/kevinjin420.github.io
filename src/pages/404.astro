---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Not Found">
  <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 100vh; background: #0a0a14; color: white; font-family: 'Inter', system-ui, sans-serif;">
    <h1 style="font-size: 6rem; font-weight: 800; margin: 0; opacity: 0.3;">404</h1>
    <p style="font-size: 1.2rem; opacity: 0.6; margin-top: 1rem;">Page not found</p>
    <a href="/" style="margin-top: 2rem; color: #e94560; text-decoration: none; font-size: 1rem;">Go home</a>
  </div>
</BaseLayout>
