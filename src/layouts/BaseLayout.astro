---
import '@/styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Kevin Jin' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Kevin Jin - Computer Engineering & Data Science at University of Michigan" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title}</title>

  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" media="print" onload="this.media='all'" />
  <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" /></noscript>

  <script is:inline>
    const originalWarn = console.warn;
    console.warn = (...args) => {
      if (args[0] && typeof args[0] === 'string' && (
        args[0].includes('THREE.ColladaLoader: You are loading an asset with a Z-UP coordinate system') ||
        args[0].includes('THREE.ColladaLoader: File version')
      )) {
        return;
      }
      originalWarn(...args);
    };
  </script>
</head>

<body class="font-inter text-base leading-normal antialiased" style="font-family: 'Inter', system-ui, sans-serif;">
  <slot />
</body>
</html>
